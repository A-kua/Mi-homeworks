<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1000">
    <alpha
        android:fromAlpha="1.0"
        android:toAlpha="0.0" />
    <rotate
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360" />
    <translate
        android:fromXDelta="0dp"
        android:fromYDelta="0dp"
        android:toXDelta="50%"
        android:toYDelta="50%" />
    <scale
        android:fromXScale="0dp"
        android:fromYScale="0dp"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="120%"
        android:toYScale="120%" />
</set>